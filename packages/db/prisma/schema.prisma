// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EmployeeRole {
  CEO
  CTO
  PRODUCT_MANAGER
  PROJECT_MANAGER
  DEVELOPER
  DESIGNER
  QA
  OPERATIONS
  CLIENT
}

enum ProjectStatus {
  IDEA
  PLANNING
  ACTIVE
  PAUSED
  COMPLETED
  CANCELLED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  BLOCKED
  REVIEW
  DONE
}

enum WorkflowType {
  DAILY_STANDUP
  WEEKLY_REPORT
  NEW_PROJECT_BOOTSTRAP
  RELEASE_PREP
  CUSTOM
}

enum WorkflowStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

enum EventType {
  GITHUB_COMMIT
  GITHUB_PR_OPENED
  GITHUB_PR_CLOSED
  GITHUB_PR_MERGED
  SLACK_MESSAGE
  WHATSAPP_MESSAGE
  WHATSAPP_MEDIA
  CLICKUP_TASK_CREATED
  CLICKUP_TASK_UPDATED
  CLICKUP_TASK_STATUS_CHANGED
  TASK_CREATED
  TASK_UPDATED
  TASK_COMPLETED
  WORKFLOW_TRIGGERED
  WORKFLOW_COMPLETED
  STANDUP_SUBMITTED
  PROJECT_CREATED
  PROJECT_UPDATED
}

model Employee {
  id             String       @id @default(cuid())
  name           String
  role           EmployeeRole
  email          String       @unique
  slackUserId    String?      @unique
  githubUsername String?
  workloadScore  Float        @default(0.0) // 0.0 to 1.0, where 1.0 is fully loaded
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  assignedTasks  Task[]
  standupEntries StandupEntry[]

  @@index([role])
  @@index([isActive])
  @@map("employees")
}

model Project {
  id          String        @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus @default(IDEA)
  priority    Int           @default(0) // Higher number = higher priority
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  tasks       Task[]
  standups    StandupEntry[]

  @@index([status])
  @@index([priority])
  @@map("projects")
}

model Task {
  id           String     @id @default(cuid())
  projectId    String
  title        String
  description  String?
  status       TaskStatus @default(TODO)
  assigneeId   String?
  estimateHours Float?
  actualHours  Float?
  dueDate      DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  project      Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee     Employee?  @relation(fields: [assigneeId], references: [id], onDelete: SetNull)

  @@index([projectId])
  @@index([assigneeId])
  @@index([status])
  @@index([dueDate])
  @@map("tasks")
}

model StandupEntry {
  id         String   @id @default(cuid())
  employeeId String
  projectId  String?
  date       DateTime @default(now())
  yesterday  String?
  today      String?
  blockers   String?
  createdAt  DateTime @default(now())

  employee   Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  project    Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)

  @@index([employeeId])
  @@index([projectId])
  @@index([date])
  @@map("standup_entries")
}

model WorkflowRun {
  id            String         @id @default(cuid())
  type          WorkflowType
  status        WorkflowStatus @default(PENDING)
  startedAt     DateTime?
  finishedAt    DateTime?
  resultSummary String?        @db.Text
  metadata      Json?          // For storing additional workflow-specific data
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt

  @@index([type])
  @@index([status])
  @@index([startedAt])
  @@map("workflow_runs")
}

model EventLog {
  id        String    @id @default(cuid())
  type      EventType
  payload   Json
  createdAt DateTime  @default(now())

  @@index([type])
  @@index([createdAt])
  @@map("event_logs")
}

